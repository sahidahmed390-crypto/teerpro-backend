# TeerPro Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/teerpro
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/teerpro

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS (Frontend URL)
FRONTEND_URL=https://teerpro.com
# For development:
# FRONTEND_URL=http://localhost:8080

# SMS Gateway (Optional - for SMS notifications)
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 (India-specific)
MSG91_AUTH_KEY=your-msg91-key
MSG91_SENDER_ID=TEERPRO

# Email Service (Optional - for email notifications)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@teerpro.com

# Mailgun
MAILGUN_API_KEY=your-mailgun-key
MAILGUN_DOMAIN=mg.teerpro.com

# Push Notifications (Optional - for mobile apps)
FIREBASE_SERVER_KEY=your-firebase-server-key

# Admin Panel Access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Result Fetching Configuration
RESULT_CHECK_INTERVAL=30000
# Interval in milliseconds (30000 = 30 seconds)

RESULT_RETRY_ATTEMPTS=3
# Number of retry attempts if fetching fails

# Backup Result Sources (Comma-separated URLs)
BACKUP_RESULT_SOURCES=https://www.source1.com,https://www.source2.com

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_AUTO_RESULT_FETCH=true

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Payment Gateway (Future feature)
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Cache (Redis - Optional for performance)
REDIS_URL=redis://localhost:6379
# For cloud Redis:
# REDIS_URL=redis://username:password@host:port
